{
    "name": "node-typescript-starter",
    "version": "1.0.0",
    "main": "dist/server.js",
    "license": "MIT",
    "description": "Start building your API with Express JS & Typescript",
    "author": {
        "name": "MickaÃ«l LAO-PANE",
        "email": "mlaopane@gmail.com",
        "url": "https://gitlab.com/monkkey/express-typescript"
    },
    "scripts": {
        "check-types": "tsc",
        "dev": "nodemon",
        "dev:legacy": "nodemon -L",
        "docker:start": "docker-compose up",
        "docker:stop": "docker-compose down",
        "build": "rm -rf dist && babel src --extensions \".ts\" --out-dir dist",
        "serve": "node -r dotenv/config -r ts-node/register -r tsconfig-paths/register dist/server.js",
        "daemonize": "pm2 start ts-node -- -r tsconfig-paths/register src/server.ts",
        "make:controller": "sh bin/make_controller.sh",
        "make:model": "sh bin/make_model.sh",
        "update:router": "ts-node commands/filesystem/router/router.ts"
    },
    "dependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/preset-typescript": "^7.3.3",
        "@types/cors": "^2.8.5",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.0",
        "@types/node": "^10.14.8",
        "@types/nunjucks": "^3.1.1",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "nunjucks": "^3.2.0",
        "pm2": "^3.5.1",
        "tsconfig-paths": "^3.8.0"
    },
    "devDependencies": {
        "eslint": "^5.14.1",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "ts-node": "^8.2.0",
        "tslint": "^5.11.0",
        "typescript": "^3.5.1"
    }
}
